{
  "name": "lumo-worker",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "wrangler dev | npx pino-pretty",
    "dev-remote": "wrangler dev --remote  | npx pino-pretty",
    "deploy": "wrangler deploy --minify",
    "start": "node ./dist/src/index.js",
    "db:generate:dev": "npx drizzle-kit generate --config=drizzle-dev.config.ts",
    "db:migrate:dev": "npx drizzle-kit migrate --config=drizzle-dev.config.ts",
    "db:migrate:prod": "npx drizzle-kit migrate --config=drizzle-prod.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.939.0",
    "@aws-sdk/s3-request-presigner": "^3.939.0",
    "@hono/zod-openapi": "^1.1.4",
    "@paralleldrive/cuid2": "^3.0.4",
    "@scalar/hono-api-reference": "^0.9.22",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.4.1",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.4",
    "hono-pino": "^0.10.3",
    "nanoid": "^5.1.6",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "stoker": "^2.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.6",
    "esbuild": "^0.25.12",
    "esbuild-plugin-path-alias": "^1.0.7",
    "eslint": "^9.39.0",
    "eslint-plugin-format": "^1.0.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.3"
  }
}
